<header id="header" itemscope itemtype="http://schema.org/Person">
  <!-- <%= I18n.t("person.name") %> -->
  <div class="header-name">
    <h1 itemprop="name">
      <%= data.person.name.short %>
    </h1>
    <p>
      <%= I18n.t("person.jobTitle") %>
      <span itemprop="jobTitle">
        <%= data.person.jobTitle %>
      </span>
    </p>
  </div>
  <div id="header-info">

    <div class="label">
      <%= I18n.t("address") %>:
    </div>
    <div class="info" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
      <span itemprop="streetAddress">
        <%= data.person.address.streetAddress %>
      </span>
      <br>
      <span itemprop="addressLocality">
        <%= data.person.address.addressLocality %>
      </span>,
      <span itemprop="addressRegion">
        <%= data.person.address.addressRegion %>
      </span>
      <span itemprop="addressCountry">
        <%= data.person.address.addressCountry %>
      </span>
    </div>

    <div class="label">
      <%= I18n.t("telephone") %>:
    </div>
    <div class="info" itemprop="telephone">
      <a href="tel:<%= data.person.telephone.delete(' ').delete('-') %>">
        <%= data.person.telephone %>
      </a>
    </div>

    <div class="label">
      <%= I18n.t("email") %>:
    </div>
    <div class="info">
      <a href="mailto:<%= data.person.email %>" target="_blank" itemprop="email">
        <%= data.person.email %>
      </a>
    </div>

    <div class="label">
      <%= I18n.t("url") %>:
    </div>
    <div class="info">
      <a href="<%= data.person.url %>" target="_blank" itemprop="url">
        <%= data.person.url %>
      </a>
    </div>

    <div class="label only-print">
      <%= I18n.t("resume") %>:
    </div>
    <div class="info only-print">
      <a href="<%= data.person.resume %>" target="_blank" itemprop="url">
        <%= data.person.resume %>
      </a>
    </div>

  </div>

</header>
<div id="border-header"></div>